% \subsubsection{Options}
% \label{subsubsec:parent-theme:options}
%
%    \begin{macrocode}
\pgfkeys{/gerad/.cd,
    .search also={
        /gerad/inner,
        /gerad/outer,
        /gerad/color,
        /gerad/font,
    }
}
%    \end{macrocode}
%
% \begin{macro}{titleformat plain}    
%    \begin{macrocode}
\pgfkeys{/gerad/titleformat plain/.cd,
    .is choice,
    regular/.code={
        \let\gerad@plain@titleformat\@empty%
        \setbeamerfont{standout}{shape=\normalfont}
    },
    smallcaps/.code={
        \let\gerad@plain@titleformat\@empty%
        \setbeamerfont{standout}{shape=\scshape}
    },
}
%    \end{macrocode}
% \end{macro}
%
% \begin{macro}{titleformat}
%    \begin{macrocode}
\pgfkeys{
    /gerad/titleformat/.code=\pfgkeysalso{
        font/titleformat title=#1,
        font/titleformat subtitle=#1,
        font/titleformat section=#1,
        font/titleformat frame=#1,
        titleformat plain=#1,
    }
}
%    \end{macrocode}
% \end{macro}
%
% Set default options.
%
%    \begin{macrocode}
\newcommand{\gerad@setdefaults}{%
    \pgfkeys{
        /gerad/.cd,
        titleformat plain=regular,
    }
}
%    \end{macrocode}

